{
  "name": "@formbird/alert",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "A lightweight SweetAlert2 clone using native HTML dialog",
  "main": "dist/swal.umd.js",
  "module": "dist/swal.es.js",
  "types": "dist/swal.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
