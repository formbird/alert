  "keywords": [
    "alert",
    "modal",
    "dialog",
    "sweetalert",
    "popup",
    "notification"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/formbird-alert.git"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.29.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.2.0",
    "testem": "1.18.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.34.0",
    "vite": "^5.1.4"
